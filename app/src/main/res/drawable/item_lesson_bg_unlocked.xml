<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="@dimen/_5sdp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSecondaryVariant" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/_10sdp"
        android:left="0dp"
        android:right="0dp">

        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <corners
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp" />
        </shape>
    </item>

</layer-list>
